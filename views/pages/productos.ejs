<%- include('../partials/header.ejs') %>
<section class="product-section">
  <h1 class="login-title">CAT√ÅLOGO DE PRODUCTOS</h1>
  <div class="products-container d-flex justify-content-between">
  <% productos.forEach(producto => { %>
    <div class="card producto-card" style="width: 16rem;">
      <img src="<%= producto.image %>" class="card-img-top" alt="<%= producto.titulo %>">
      <div class="card-body">
        <h5 class="card-title"><%= producto.titulo %></h5>
        <p class="card-text">$<%= producto.precio %></p>
        <a href="/producto/<%= producto._id %>" class="btn btn-primary">Agregar al Carrito</a>
      </div>
    </div>
  <% }) %>
  </div>
</section>

