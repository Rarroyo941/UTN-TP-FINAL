<%- include('../partials/header.ejs') %>
<h1 class="login-title">EDITAR PRODUCTO</h1>
<section class="editar-usuarios">
    <form action="/productos/editar/<%=product.id%>" method="post">
        <input type="text" name="titulo" placeholder="Ingrese nuevo titulo" value="<%=product.titulo%>">
        <input type="number" name="costo" placeholder="Ingrese nuevo costo" value="<%=product.precio%>">
        <input type="number" name="precio" placeholder="Ingrese nuevo precio" value="<%=product.costo%>">
        <input type="number" name="stock" placeholder="Ingrese nuevo stock" value="<%=product.stock%>">
        <button type="submit">Actualizar</button>
    </form>
</section>
