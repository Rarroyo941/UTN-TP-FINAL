<%- include('../partials/header.ejs') %>
<h1 class="login-title">EDITAR PRODUCTO</h1>
<section >
    <form action="/productos/editar/<%=product.id%>" method="post" style="display: flex;flex-direction: column;width: 100%;align-items: center;gap: 2px;">
        <label>Titulo</label>
        <input type="text" name="titulo" placeholder="Ingrese nuevo titulo" value="<%=product.titulo%>">
        <label>Costo</label>
        <input type="number" name="costo" placeholder="Ingrese nuevo costo" value="<%=product.costo%>">
        <label>Precio</label>
        <input type="number" name="precio" placeholder="Ingrese nuevo precio" value="<%=product.precio%>">
        <label>Stock</label>
        <input type="number" name="stock" placeholder="Ingrese nuevo stock" value="<%=product.stock%>">
        <button type="submit" class="btn btn-success">Actualizar</button>
    </form>
</section>
<%- include('../partials/footer.ejs') %>